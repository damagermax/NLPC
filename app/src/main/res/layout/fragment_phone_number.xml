<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.PhoneNumberFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="@string/verify_msg" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_roundcorner"
                android:layout_height="55dp">

                <com.hbb20.CountryCodePicker
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:id="@+id/ccp"
                    app:ccp_textSize="17sp"
                    android:paddingEnd="5dp"
                    app:ccpDialog_showFlag="false"
                    app:ccpDialog_showNameCode="false"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccpDialog_showTitle="false"
                    app:ccp_autoDetectCountry="true"
                    app:ccpDialog_searchEditTextTint="@color/deep_gray"
                    app:ccp_showFullName="false"
                    app:ccp_showPhoneCode="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@color/gray"
                    android:textSize="17sp"
                    android:id="@+id/numberEt"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />


            </LinearLayout>





            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/submitBtn"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="70dp"
                android:text="@string/submit" />






        </LinearLayout>




    </ScrollView>

</LinearLayout>